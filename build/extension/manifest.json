{
  "manifest_version": 2,

  "name": "PageCatch",
  "description": "Save a complete web page as a single HTML file.",
  "icons": {
     "128": "img/icon128-96.png",
     "16": "img/icon16.png",
     "32": "img/icon32.png",
     "48": "img/icon48.png"
  },

  "version": "0.1.0",
  "background": {
  				"persistent": false,
          "scripts": ["background.min.js"]
  				},

  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_title": "Click here to save page"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file://*", "activeTab", "<all_urls>"
  ]
}
