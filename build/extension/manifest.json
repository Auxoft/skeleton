{
  "manifest_version": 2,

  "name": "PageCatch",
  "description": "save html page with all resources into one file",
  "version": "0.1.0",
  "background": {
  				"persistent": false,
          "scripts": ["background.min.js"]
  				},

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Click here to save page"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file://*", "activeTab", "<all_urls>"
  ]
}
